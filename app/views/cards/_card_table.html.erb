<table class="table table-hover">
  <thead>
    <tr>
    <% Card.card_types.each do |c| %>
      <th><%= c %></th>
    <% end %>
    </tr>
  </thead>

  <tbody>
  <% @cards_sorted_by_position.each_with_index do |card, index| %>
    <tr>
    <% Card.card_types.each do |card_type| %>
      <td class="droppable" data-type="<%= card_type %>" data-position="<%= index + 1 %>">
      <% if card[card_type] %>
        <%= render "card", :card => card[card_type] %>
        <% else %>
        <div class="new_card">
          <a href="#" class="btn btn-block btn-default new_card_link" >New Card</a>
        </div>
      <% end %>
      </td>
     <% end %>
    </tr>
  <% end %>
  </tbody>
</table>